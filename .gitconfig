[push]
	autoSetupRemote = true

[core]
	editor      = nvim
  ignorecase  = false
  pager       = delta

[delta]
  navigate     = true
  light        = true
  algorithm    = histogram
  submodule    = log
  side-by-side = true
  line-numbers = true

[interactive]
    diffFilter = delta --color-only

[tig "bind"]
  diff = F ?!git commit --fixup %(commit)
  diff = S ?!git commit --squash %(commit)
  main = F ?!git commit --fixup %(commit)
  main = S ?!git commit --squash %(commit)

[alias]
  br  = branch
  sh  = switch
  c   = commit
  co  = checkout
  dc  = !git c -m $(date +%Y-%m-%d)
  a   = add
  shm = !git sh $(git mb)
  mb  = !git symbolic-ref refs/remotes/origin/HEAD | sed 's@^refs/remotes/origin/@@'
  rom = !git rebase $(git mb)
  ram = !git rebase -i --autosquash $(git mb)
  ra  = !git rebase -i --autosquash
  f   = fetch
  d   = diff
  pl  = pull
  p   = push
  pr = !git push && gh pr create -w

[ghq]
	root = ~/go/src
	root = ~/ghq

[merge]
  conflictstyle = zdiff3

